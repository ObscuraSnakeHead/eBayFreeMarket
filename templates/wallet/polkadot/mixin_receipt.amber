mixin paymentReceipt($a)
  div.ui.message
    div.ui.form
      div.field
        label Tx Hash
        pre.word-break #{$a.Hash}                      
      div.ui.section.divider
      div.field
        label From
        span.label.ui.bitcoin.id.tiny #{$a.WalletFrom}   
      div.ui.section.divider
      div.field
        label To
        span.label.ui.bitcoin.id.tiny #{$a.WalletTo}
      div.ui.section.divider
      div.field
        label Amount
        pre.word-break #{$a.Amount} 
